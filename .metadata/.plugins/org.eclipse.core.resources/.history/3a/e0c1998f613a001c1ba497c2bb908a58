		// create a session
		
		Session session = factory.getCurrentSession();
		
		
		try {
			
			
			
			
			
			
			
			
			
			
			
			
			
		} finally {
			
			session.close();
			factory.close();
			
			
		}
		
		
		
		
	}
	

}
